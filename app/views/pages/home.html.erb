<div class="banner-main">
  <div class="banner-left">
  </div>
  <div class="banner-center">
    <%= image_tag("avsf_logo.png", class: "banner-logo") %>
    <h1>AV SuperFriends</h1>
    <h3>Podcasts about audio, video, and adapters</h3>
  </div>
  <div class="banner-right">
    <%= link_to "Listen now", root_path, class: "outline-button"  %>
  </div>
</div>
<div class="episode-container">
  <h3 class="episode-heading">Latest Episodes</h3>
  <div class="episode-index">
    <% @episodes.each do |episode| %>
      <div class="episode-card">
        <div class="episode-card-image"
          style="background-image: <%= episode.thumbnail.attached? ? "linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('#{cl_image_path(episode.thumbnail.key, height: 200, crop: :fill)}')" : 'none' %>">
        </div>
        <div class="episode-card-text">
          <h5><%= episode.title %></h5>
          <%= episode.preview_text %>
        </div>
        <div class="episode-card-button">
          <%= link_to "View details", episode_path(episode), class: "blue-button"  %>
        </div>
      </div>
    <% end %>
  </div>
</div>
